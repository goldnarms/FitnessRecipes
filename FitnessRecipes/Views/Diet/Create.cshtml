@using System.Collections
@using FitnessRecipes.Helpers
@using FitnessRecipes.Resources.Common
@model DietViewModel

@{
    ViewBag.Title = "Opprett ny diett";
    ViewBag.LinkHeader = "Diet";
}
<div class="page_header row">
    <div class="small-12 large-12 columns page_header_left">
        <h1>DIETT</h1>
    </div>
</div>
<div class="row">
    <div class="small-12 large-12 columns">
        <ul class="bread_crumb clearfix">
            <li>Du er her:</li>
            <li>
                @Html.ActionLink("Hjem", "Index", "Home")
            </li>
            <li class="separator icon_small_arrow right_white">&nbsp;
            </li>
            <li>Legg til diett
            </li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="small-8 large-8 columns page_margin_top">
        <div class="row">
            <div class="small-12 large-12 columns oppskrifter">
                <h3>Legg til ny</h3>
                <hr class="greenBorderBottom" />
            </div>
        </div>
        @using (Html.BeginForm("Create", "Diet", FormMethod.Post, new { @class = "contact_form", enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="small-6 large-6 columns">
                    @Html.LabelForRequired(model => model.Name)
                </div>
                <div class="small-6 large-6 columns">
                    @Html.TextBoxFor(model => model.Name, new { @class = "text_input hint wide", placeholder = "navn" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "validation"})
                </div>
            </div>
            <div class="row">
                <div class="small-6 large-6 columns">
                    @Html.LabelForRequired(model => model.Description)
                </div>
                <div class="small-6 large-6 columns">
                    @Html.TextAreaFor(model => model.Description, new { @class = "text_input hint wide", placeholder = "beskrivelse" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <div class="row">
                <div class="small-6 large-6 columns">
                    @Html.LabelForRequired(model => model.WebUrl)
                </div>
                <div class="small-6 large-6 columns">
                    @Html.TextBoxFor(model => model.WebUrl, new { @class = "text_input hint wide", placeholder = "weburl" })
                    @Html.ValidationMessageFor(model => model.WebUrl)
                </div>
            </div>
            <div class="row">
                <div class="small-6 large-6 columns">
                    @Html.LabelForRequired(model => model.CategoryId)
                </div>
                <div class="small-6 large-6 columns">
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewData["Categories"] as IEnumerable, "Id", "Name"))
                    @Html.ValidationMessageFor(model => model.CategoryId)
                </div>
            </div>
            <div class="row">
                <div class="small-6 large-6 columns">
                    @Html.LabelForRequired(model => model.ImgUrl)
                </div>
                <div class="small-6 large-6 columns">
                    @*@Html.TextBoxFor(model => model.File, new { @class = "text_input hint wide", placeholder = "bilde", type = "file" })*@
                    <input type="file" name="file" />
                    @Html.ValidationMessageFor(model => model.ImgUrl)
                </div>
            </div>
            <div class="row" style="padding-top: 20px">
                <div class="small-12 large-12 columns" style="text-align: right">
                    <input type="submit" value="@Common.Create" />
                    @Html.ValidationSummary(true)
                </div>
            </div>
        }

    </div>
    <div class="small-4 large-4 columns">
        <br />
        <ul>
            <li class="home_box white"></li>
        @Html.Partial("_Sidebar")
        </ul>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/chosen.jquery.min.js"></script>
}