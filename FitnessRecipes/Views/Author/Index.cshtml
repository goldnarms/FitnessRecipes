@model Dictionary<char, List<AuthorViewModel>>

@{
    ViewBag.Title = "Bloggere";
    ViewBag.LinkHeader = ViewContext.RouteData.Values["controller"].ToString(); 
}
<div class="page_header row">
    <div class="small-12 large-12 columns page_header_left">
        <h1>BLOGGERE</h1>
    </div>
</div>
<div class="row">
    <div class="small-12 large-12 columns">
        <ul class="bread_crumb clearfix">
            <li>Du er her:</li>
            <li>
                @Html.ActionLink("Hjem", "Index", "Home")
            </li>
            <li class="separator icon_small_arrow right_white">&nbsp;
            </li>
            <li>Bloggere
            </li>
        </ul>
    </div>
</div>
<ul>
    @foreach (var blogger in Model.Where(blogger => blogger.Value.Count > 0))
    {
        <li>
            <h2>@blogger.Key</h2>
        </li>
        foreach (var forfatter in blogger.Value)
        {
            <li>
                @Html.ActionLink(@forfatter.User.Name, "Author", new { id = forfatter.UserId})
            </li>
        }
    }
</ul>
