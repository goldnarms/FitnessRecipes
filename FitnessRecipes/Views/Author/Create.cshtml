@using FitnessRecipes.Resources.Common
@using FitnessRecipes.Resources.Views;
@model AuthorViewModel

@{
    ViewBag.Title = @Authors.AddNewBlogger;
    ViewBag.LinkHeader = ViewContext.RouteData.Values["controller"].ToString(); ;
}
<div class="page_header row">
    <div class="small-12 large-12 columns page_header_left">
        <h1>BLOGGER</h1>
    </div>
</div>
<div class="row">
    <div class="small-12 large-12 columns">
        <ul class="bread_crumb clearfix">
            <li>Du er her:</li>
            <li>
                @Html.ActionLink("Hjem", "Index", "Home")
            </li>
            <li class="separator icon_small_arrow right_white">&nbsp;
            </li>
            <li>Legg til blogger
            </li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="small-8 large-8 columns page_margin_top">
        <div class="row">
            <div class="small-12 large-12 columns oppskrifter">
                <h3>Legg til ny</h3>
                <hr class="greenBorderBottom" />
            </div>
        </div>
@using (Html.BeginForm("Create", "Author", FormMethod.Post, new { @class = "contact_form" }))
{
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="small-6 large-6 columns">
            @Html.LabelFor(model => model.User.Name)
        </div>
        <div class="small-6 large-6 columns">
            @Html.TextBoxFor(model => model.User.Name, new { @class = "text_input hint wide", placeholder = "navn" })
            @Html.ValidationMessageFor(model => model.User.Name)
        </div>
    </div>

    <div class="row">
        <div class="small-6 large-6 columns">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="small-6 large-6 columns">
            @Html.TextAreaFor(model => model.Description, new { @class = "text_input hint wide", placeholder = "beskrivelse" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
    
    <div class="row">
        <div class="small-6 large-6 columns">
            @Html.LabelFor(model => model.User.ImgUrl)
        </div>
        <div class="small-6 large-6 columns">
            @Html.TextBoxFor(model => model.User.ImgUrl, new { @class = "text_input hint wide", placeholder = "bildesti" })
            @Html.ValidationMessageFor(model => model.User.ImgUrl)
        </div>
    </div>
    
    <div class="row">
        <div class="small-6 large-6 columns">
            @Html.LabelFor(model => model.User.WebUrl)
        </div>
        <div class="small-6 large-6 columns">
            @Html.TextBoxFor(model => model.User.WebUrl, new { @class = "text_input hint wide", placeholder = "webadresse" })
            @Html.ValidationMessageFor(model => model.User.WebUrl)
        </div>
    </div>

    <div class="row">
        <div class="small-12 large-12 columns" style="text-align: right">
            <input type="submit" value="@Common.Create" />
        </div>
    </div>
}
            </div>
    <div class="small-4 large-4 columns">
        <br />
        <ul>
            <li class="home_box white"></li>
        @Html.Partial("_Sidebar")
        </ul>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/chosen.jquery.min.js"></script>
}