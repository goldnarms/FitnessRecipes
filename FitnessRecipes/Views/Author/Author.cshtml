@model AuthorViewModel

@{
    ViewBag.Title = "Blogger";
    ViewBag.LinkHeader = ViewContext.RouteData.Values["controller"].ToString();
}
<div class="page_header row">
    <div class="small-12 large-12 columns page_header_left">
        <h1>BLOGGER</h1>
    </div>
</div>
<div class="row">
    <div class="small-12 large-12 columns">
        <ul class="bread_crumb clearfix">
            <li>Du er her:</li>
            <li>
                @Html.ActionLink("Hjem", "Index", "Home")
            </li>
            <li class="separator icon_small_arrow right_white">&nbsp;
            </li>
            <li>Blogger
            </li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="small-8 large-8 columns  page_margin_top">
        <div class="row">
            <div class="small-12 large-12 columns oppskrifter">
                <h3>@Html.DisplayFor(model => model.User.Name)</h3>
                <hr class="greenBorderBottom" />
            </div>
        </div>
        <div class="row">
            <div class="small-3 large-3 columns clearfix tabs">
                <dl class="tabs">
                    <dd class="tabsli active"><a class="tabsa" href="#simple1">Info</a></dd>
                    <dd class="tabsli"><a class="tabsa" href="#simple2">Oppskrifter</a></dd>
                </dl>
            </div>
            <div class="small-9 large-9 columns">
                <ul class="tabs-content">
                    <li class="active" id="simple1Tab">
                        <div class="row">
                            <div class="small-12 large-12 columns headerPadding">
                                <h2 class="box_header">Informasjon</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="small-12 large-12 columns">
                                @Model.Description
                            </div></div>
                        @if (!string.IsNullOrEmpty(Model.User.ImgUrl))
                        {
                            
                                                        <div class="gallery_box">
                                    <a id="single_image" href="@Model.User.ImgUrl">
                                        <img src="@Model.User.ImgUrl" /></a>
                                </div>
                        }
                    </li>
                    <li id="simple2Tab" class="hide">
                        <div class="row">
                            <div class="small-12 large-12 columns">
                                <div class="row">
                                    <div class="small-12 large-12 columns">
                                        <h2>Oppskrifter</h2>
                                        <h4 class="sentence">Oppskrifter fra denne bloggeren:</h4>
                                        <ul>
                                            <li>
                                                <div class="row">
                                                    <div class="small-6 large-6 columns box_header">Navn</div>
                                                    <div class="small-6 large-6 columns">
                                                        <ul class="small-block-grid-4 large-block-grid-4">
                                                            <li class="box_header">Kcal
                                                            </li>
                                                            <li class="box_header">Protein
                                                            </li>
                                                            <li class="box_header">Karb
                                                            </li>
                                                            <li class="box_header">Fett
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </li>
                                            @foreach (var recipe in Model.User.Recipes)
                                            {
                                                <li>
                                                    <div class="row">
                                                        <div class="small-6 large-6 columns" style="margin-left: 0; padding-left: 0">
                                                            <span class="separator icon_small_arrow right_white">&nbsp;&nbsp;&nbsp;</span>
                                                            @Html.ActionLink(@recipe.Meal.Name, "Recipe", "Recipe", new { id = recipe.MealId }, null)
                                                        </div>
                                                        <div class="small-6 large-6 columns">
                                                            <ul class="small-block-grid-4 large-block-grid-4">
                                                                <li>
                                                                    <span>@recipe.Kcal.ToString("N1")</span>
                                                                </li>
                                                                <li>
                                                                    <span>@recipe.Protein.ToString("N1")</span>
                                                                </li>
                                                                <li>
                                                                    <span>@recipe.Carb.ToString("N1")</span>
                                                                </li>
                                                                <li>
                                                                    <span>@recipe.Fat.ToString("N1")</span>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

    </div>
    <div class="small-4 large-4 columns">
                        <br />
        <ul>
            <li class="home_box white">
            </li>
        @Html.Partial("_Sidebar")
        <br />
        <ul>
        <li class="home_box white">
        </li>
    </div>
</div>

